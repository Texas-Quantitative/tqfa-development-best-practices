{
  "name": "css-extraction-toolkit",
  "version": "1.0.0",
  "description": "Automated CSS extraction tools for pixel-perfect website recreation",
  "type": "module",
  "scripts": {
    "styles:responsive": "node tools/analyze-responsive.mjs",
    "styles:raw": "node tools/scrape-styles.mjs",
    "styles:computed": "node tools/audit-computed.mjs",
    "styles:analyze": "node tools/analyze-specific-elements.mjs",
    "styles:complete": "npm run styles:responsive && npm run styles:computed && npm run styles:analyze",
    "setup": "mkdir -p tools orig && npm install"
  },
  "devDependencies": {
    "puppeteer": "^23.3.0",
    "jsdom": "^24.1.0",
    "node-fetch": "^3.3.2"
  },
  "keywords": [
    "css-extraction",
    "web-scraping",
    "style-analysis",
    "website-recreation",
    "puppeteer",
    "automation"
  ],
  "author": "TQFA Development Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  }
}